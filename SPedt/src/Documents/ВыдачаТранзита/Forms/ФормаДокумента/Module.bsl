	КонецЕсли;
	

	
	Если Параметры.Свойство("Заморозка") и ЗначениеЗаполнено(Параметры.Заморозка) Тогда
		ЗаполнитьПоТочекНазначенияНаСервере(Параметры.ТочкаНазначения,Истина);
	КонецЕсли;
	
	
	ПодсветкаСтрок();
