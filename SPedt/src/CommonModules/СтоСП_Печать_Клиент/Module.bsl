Функция ЧекНЗРасходная(ДанныеПечати,СразуНаПринтер = Истина) Экспорт
	
	Если ТипЗнч(ДанныеПечати) = Тип("СправочникСсылка.Участники") Тогда
		ТабДок						= СтоСП_Печать.ТабДок_РасходнаяЧекНЗ_ПоУчастнику(ДанныеПечати);	
	Иначе 		
		Если ТипЗнч(ДанныеПечати) = Тип("Структура") и ДанныеПечати.Свойство("ОбъектыПечати") Тогда
			СтруктураОбъекта = ДанныеПечати.ОбъектыПечати[0]
		Иначе
			СтруктураОбъекта			= ДанныеПечати.Форма.Объект;                                    	
		КонецЕсли;	
		ТабДок						= СтоСП_Печать.ТабДок_РасходнаяЧекНЗ(СтруктураОбъекта);
	КонецЕсли;                                             
	СразуНаПринтер = лОЖЬ;
	ТабДок.ОтображатьСетку 		= 	Ложь;
	ТабДок.АвтоМасштаб			=	Истина;
	ТабДок.ПолеСлева			=	0;
	ТабДок.ПолеСправа			=	0;
	ТабДок.Защита 				= 	Ложь;
	ТабДок.ТолькоПросмотр 		= 	Ложь;
	ТабДок.ОтображатьЗаголовки 	= 	Ложь;
	Если СразуНаПринтер = Истина Тогда
		ТабДок.Напечатать();
	Иначе
		ТабДок.Показать();
	КонецЕсли;		
КонецФункции	



