		СтарыйКОд = Выборка.Ссылка.Код;
		Попытка
		    НовыйКод = Число(СтарыйКОд)
		Исключение
			СтарыйКОд = СтрЗаменить(СтарыйКОд,"-","1");		
			НовыйКод = Число(СтарыйКОд);
		КонецПопытки;
		НовыйКод = Формат(НовыйКод,"ЧЦ=9; ЧВН=; ЧГ=0");
			
		габаритОбъект = выборка.ссылка.ПолучитьОбъект();	
