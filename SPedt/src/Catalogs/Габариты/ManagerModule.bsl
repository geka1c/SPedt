	Запрос.Текст = 
		"ВЫБРАТЬ
		|	Габариты.Ссылка КАК Ссылка
		|ИЗ
		|	Справочник.Габариты КАК Габариты";
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Выборка = РезультатЗапроса.Выбрать();
	
