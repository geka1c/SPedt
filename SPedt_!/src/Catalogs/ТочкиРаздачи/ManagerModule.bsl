		ПараметрыШтрихкода=ЗаполнитьПараметрыОбработки("64"+Выборка.Код+"00000000");
		РисунокШтрихкод.Картинка = Обработки.ПечатьЭтикетокИЦенников.ПолучитьКартинкуШтрихкода(ВнешняяКомпонента, ПараметрыШтрихкода);
		РисунокШтрихкод.Расположить(ОбластьШК);
		
		ПараметрыШтрихкода=ЗаполнитьПараметрыОбработки("65"+Выборка.Код+"00000000");
		РисунокШтрихкодДляЗаписи.Картинка = Обработки.ПечатьЭтикетокИЦенников.ПолучитьКартинкуШтрихкода(ВнешняяКомпонента, ПараметрыШтрихкода);
		РисунокШтрихкод.Расположить(ОбластьШК);
		
		
	//	рис.Объект.Сообщение=Выборка.Ссылка.Штрихкод;
		Область.Параметры.Заполнить(Выборка);
		ТабДок.Вывести(Область, Выборка.Уровень());
		
		
	КонецЦикла;
	
	                                                                                       																								 

